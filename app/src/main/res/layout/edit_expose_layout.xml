        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Energieträger" />

        <Spinner
            android:id="@+id/spinner_immo_energieträger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Energieausweis vorhanden?" />

        <Spinner
            android:id="@+id/spinner_immo_energieausweis_yes_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Spinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Energieausweistyp:" />

        <Spinner
            android:id="@+id/spinner_immo_energieausweis_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Spinner>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Obejktzustand" />

        <Spinner
            android:id="@+id/spinner_immo_objektzustand"
