<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.webgalaxie.blischke.bachelortakesix.fragments.other.AddAttachmentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fügen Sie hier einen Anhang der Immobilie hinzu"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Geben Sie dazu einen Titel/ Dateinamen ein und klicken Sie dann auf Bild auswählen"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <EditText
            android:id="@+id/pdfNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/addValueBTN"
            android:layout_below="@+id/addValueBTN"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="Dateiname"
            android:inputType="textPersonName" />


        <Button
            android:id="@+id/addPDFBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/editText"
            android:layout_alignStart="@+id/editText"
            android:layout_below="@+id/editText"
            android:layout_marginTop="27dp"
            android:background="@drawable/background_signup"
            android:text="Bild hinzufügen"
            android:textColor="@color/manu_text" />

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="16dp" />


    </LinearLayout>

</ScrollView>
